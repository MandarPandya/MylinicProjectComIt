@model MyClinicProject.Models.Patient

<h3>Basic Information</h3>
<div>
<dl class="row">
  <dt class="col-sm-3">First Name</dt>
  <dd class="col-sm-9">@Model.FirstName</dd>

  <dt class="col-sm-3">Last Name</dt>
  <dd class="col-sm-9">@Model.LastName</dd>

  <dt class="col-sm-3">Birth Date</dt>
  <dd class="col-sm-9">@Model.BirthDate</dd>

  <dt class="col-sm-3 text-truncate">Gender</dt>
  <dd class="col-sm-9">@Model.Gender</dd>
</dl>
</div>
<br/>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Update Basic Information</a>
</div>
  <br/>
  <h3>Additional Information</h3>
<div>
<dl class="row">  
  <dt class="col-sm-3">Blood Group</dt>
  <dd class="col-sm-9">@Model.BloodGroup</dd>

  <dt class="col-sm-3 text-truncate">Allergies</dt>
  <dd class="col-sm-9">@Model.Allergies</dd>

  <dt class="col-sm-3 text-truncate">Height</dt>
  <dd class="col-sm-9">@Model.Height</dd>

  <dt class="col-sm-3 text-truncate">Weight</dt>
  <dd class="col-sm-9">@Model.Weight</dd>

  <dt class="col-sm-3 text-truncate">Long Term Medication</dt>
  <dd class="col-sm-9">@Model.LongTermMedication</dd>
</dl>
</div>

  <br/>
  <h5>Contact Information</h5>
<div>
<dl class="row">
  <dt class="col-sm-3 text-truncate">Address</dt>
  <dd class="col-sm-9">@Model.Address</dd>

  <dt class="col-sm-3 text-truncate">Contact</dt>
  <dd class="col-sm-9">@Model.Contact</dd>

  <dt class="col-sm-3 text-truncate">Emergency Contact</dt>
  <dd class="col-sm-9">@Model.EmergencyContact</dd>

  <dt class="col-sm-3 text-truncate">Email</dt>
  <dd class="col-sm-9">@Model.Email</dd>

</dl>
</div>

<br/>
<div>
<a asp-action="MoreInfoForm" asp-route-id="@Model.Id" class="btn btn-info">Update Additional Information</a>
</div>
<br/>
<div>
  <form asp-action="Delete">
    <input type="hidden" asp-for="Id"/>
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>
  <br/>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>